}
{
  <DECORATOR>
  (constant=<CONSTANT_INVOCATION>)?
  (
    LOOKAHEAD(2) InvocationExpression()
    |
    LOOKAHEAD(2) Reference()
  )
  BlankLines()
  {
    if (constant != null) {
        jjtThis.setConstant(true);
    }
    return jjtThis;
  }
}

